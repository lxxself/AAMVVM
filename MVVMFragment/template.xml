<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="MVVM Fragment"
    minApi="9"
    minBuildApi="14"
    description="Creates a new mvvm fragment">

    <category value="AAMVVM" />
    <formfactor value="Mobile" />

    

    <parameter
        id="shortName"
        name="Short Name"
        type="string"
        constraints="unique|nonempty"
        suggest="Main"
        default="Main"
        help="请填写页面名,如填写 Main,会自动生成 MainFrament, MainViewModel 等文件(首字母请大写)" />

    <parameter
        id="fragmentClass"
        name="Fragment Name"
        type="string"
        constraints="class|unique|nonempty"
        suggest="${shortName}Fragment"
        default="MainActivity"
        help="The name of the fragment class to create" />

    <parameter
        id="layoutName"
        name="Layout Name"
        type="string"
        constraints="layout|unique|nonempty"
        suggest="fragment_${camelCaseToUnderscore(shortName)}"
        default="main_fragment"
        help="The name of the layout to create for the fragment" />

    <parameter
        id="viewmodelName"
        name="ViewModel Name"
        type="string"
        constraints="unique|nonempty"
        suggest="${shortName}ViewModel"
        default="MainViewModel"
        help="The name of the viewmodel class to create" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />


    <parameter
        id="moduleName"
        name="Module Name"
        type="string"
        suggest="app"
        default="app"
        help="自动生成到哪一个模块" />

    <parameter
        id="customSrcDir"
        name="Custom SrcDir"
        type="string"
        suggest="src.main.java"
        constraints="package"
        default="src.main.java"
        help="目录，默认到src/main/java" />

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
